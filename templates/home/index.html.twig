{% extends 'base.html.twig' %}
 {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.scss') }}">{% endblock %}
{% block title %}StackOverflow{% endblock %}

{% block body %}
    <h1 style="text-align:center;">Liste des postes</h1>
    
    
    {% for post in posts %}
    
    <div class="card bg-secondary mb-3" style="margin-left: auto;
  margin-right: auto;max-width:50%;border-radius:3%;margin:3% ;display:inline-block;text-align:center;">
  <div class="card-header">   <h2>{{ post.title }}</h2></div>
  <div class="card-body">
    <h4 class="card-title"> <div>{{ post.content }}</div></h4>
    <p class="card-text"><div>{{ post.status }}</div></p>
     <div>{{ post.createdAt|date("d/m/Y") }}</div>

     <a class="btn btn-primary"href="{{ path("app_detail",{'id':post.id}) }}">Voir plus</a>
  </div>
</div>
    
   {% endfor %}
{% endblock %}
      
       
       
        
    
