{% extends 'base.html.twig' %}

{% block title %}StackOverflow | {{ post.title }}{% endblock %}

{% block body %}
<h2>Question :</h2>
<div class="card bg-secondary mb-3" tyle="margin:auto;margin-top:5%;display:flex">
  <div class="card-header">
    <h2>{{ post.title }}</h2>
  </div>

  <div class="card-body">
    <h4 class="card-title">
      <div>{{ post.content }}</div>
    </h4>
    <div>le {{ post.createdAt|date("d/m/Y") }} par {{ post.user.username }}</div>
  </div>
</div>

<h2>Répondre</h2>
{% if is_granted("ROLE_USER") %}
  {{ include('detail/_comment_form.html.twig', {'button_label': 'Enregistrer'}) }}
{% else %}
  <p>Vous devez être connecté pour répondre. <a href="{{ path('app_login') }}">Me connecter</a></p>
{% endif %}
<h2>Réponses des utilisateurs</h2>
{% for comment in post.comments|filter(comment => comment.status == 'published') %}
  <div class="card bg-secondary mb-3">
    {% if app.user == comment.user %}      
      <div class="card-header d-flex flex-row-reverse">
        {% include('comment/_delete_form.html.twig') %}
        <a class="mr-1 btn btn-info" href="{{ path('app_comment_edit', {'id': comment.id}) }}">Modifier</a>
      </div>
    {% endif %}
    <div class="card-body">
      <h4 class="card-title">
        <div>{{ comment.content }}</div>
      </h4>
      <div>le {{ comment.createdAt|date("d/m/Y") }} par {{ comment.user.username }}</div>
    </div>
  </div>
{% else %}
  <div class="">Il n'y a pas encore de commentaires, soyez le premier à répondre</div>
{% endfor %}

{% endblock %}